<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <TextView
                android:id="@+id/banner2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:textStyle="bold"
                android:background="@color/red"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:text="GIJONBOARD" />

            <Button
                android:id="@+id/stopButton"
                android:layout_width="220dp"
                android:layout_height="75dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/stop_button"
                android:text="REQUEST STOP"
                android:textStyle="bold" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/frameLayout1_6"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/rounded_element"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/miImagen1_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/recicler_view_frame"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                app:layout_constraintBottom_toTopOf="@+id/layout_buttons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textNoConnection"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="No data available yet!" />

        </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout1_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_element"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/miImagen1_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:src="@drawable/recicler_view_frame"/>

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:map="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    tools:context=".ThirdActivity" />


            </FrameLayout>
    </LinearLayout>
</LinearLayout>